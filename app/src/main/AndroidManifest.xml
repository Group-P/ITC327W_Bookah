<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.itc327w_bookah_mobile">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.BrowseBooks"></activity>
        <activity android:name=".Activities.UploadBooks" />
        <activity android:name=".Activities.RequestedBooks" />
        <activity android:name=".Activities.Cart" />
        <activity android:name=".Activities.OrderedBooks" />
        <activity android:name=".Activities.AboutUs" />
        <activity android:name=".Activities.ContactUs" />
        <activity android:name=".Activities.Help" />
        <activity android:name=".Activities.Settings" />
        <activity android:name=".Activities.ForgotPassword" />
        <activity
            android:name=".Activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.SplashScreens.HelloSplash" />
        <activity android:name=".Activities.SplashScreens.OpeningSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Register" />
        <activity android:name=".Activities.Login" />
    </application>

</manifest>