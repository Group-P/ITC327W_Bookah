<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivRecBookImage"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRecBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="Title"
        android:textSize="24sp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivRecBookImage"
        app:layout_constraintTop_toTopOf="@+id/ivRecBookImage" />

    <TextView
        android:id="@+id/tvRecBookISBN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:text="ISBN"
        android:textSize="24sp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/tvRecBookTitle"
        app:layout_constraintStart_toStartOf="@+id/tvRecBookTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvRecBookTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>